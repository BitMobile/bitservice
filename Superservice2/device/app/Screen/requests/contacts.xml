<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack" StyleSheet="Contacts.css">

	<s:Push Id="objCust" Value="$param1"></s:Push>
	<s:Push Id="contacts" Value="$GetContacts($objCust)"></s:Push>

	<c:DockLayout>

		<c:DockLayout CssClass="footer">
			<c:DockLayout CssClass="btn_left_footer" OnClickAction="$Workflow.DoAction(AddContact, NULL, $objCust)">
				<c:TextView Text="Добавить" />
			</c:DockLayout>

			<c:DockLayout CssClass="btn_right_footer" OnClickAction="$Workflow.DoBack()">
				<c:TextView Text="Закрыть" />
			</c:DockLayout>
		</c:DockLayout>

		<c:ScrollView>
			<c:HorizontalLine />

			<s:Iterator Id="contact" Value="$contacts">
				<c:HorizontalLine />
				
					
					<s:If Test="$numberExists($contact)">
						<c:SwipeHorizontalLayout Id="swipe_layout" CssClass="swipe_layout" Index="0">
							<c:HorizontalLayout CssClass="grid">
								<c:VerticalLayout  OnClickAction="$Workflow.DoAction(EditContact, $contact.Id, $objCust)">
									<s:If Test="$contact.MainContact">
										<c:TextView Text="$contact.LastName" CssClass="main_rowbold"></c:TextView>
									</s:If>
									<s:Else>
										<c:TextView Text="$contact.LastName" CssClass="main_row"></c:TextView>
									</s:Else>							
									<c:TextView Text="{$contact.FirstName} {$contact.MiddleName}" CssClass="main_row"></c:TextView>
									<c:TextView Text="$contact.Position.Description" CssClass="description_row"></c:TextView>
								</c:VerticalLayout>
								<c:VerticalLayout CssClass="PhonePlace" OnClickAction="$makeContactCall($contact.Id)">
									
								</c:VerticalLayout>
							</c:HorizontalLayout>
							
							<c:HorizontalLayout CssClass="red_swipe" OnClickAction="$KillContact($contact.Id, $objCust)">
								<c:VerticalLayout>
		             					<c:Image></c:Image>
		              					<c:TextView Text="#Fair#"></c:TextView>
		           				</c:VerticalLayout>
							</c:HorizontalLayout>
		
						</c:SwipeHorizontalLayout>
					</s:If>
					<s:Else>
						<c:SwipeHorizontalLayout Id="swipe_layout" CssClass="swipe_layout" Index="0">
							<c:HorizontalLayout CssClass="grid" OnClickAction="$Workflow.DoAction(EditContact, $contact.Id, $objCust)">
								<c:VerticalLayout>
									<s:If Test="$contact.MainContact">
										<c:TextView Text="$contact.LastName" CssClass="main_rowbold"></c:TextView>
									</s:If>
									<s:Else>
										<c:TextView Text="$contact.LastName" CssClass="main_row"></c:TextView>
									</s:Else>							
									<c:TextView Text="{$contact.FirstName} {$contact.MiddleName}" CssClass="main_row"></c:TextView>
									<c:TextView Text="$contact.Position.Description" CssClass="description_row"></c:TextView>
								</c:VerticalLayout>
								
							</c:HorizontalLayout>
							
							<c:HorizontalLayout CssClass="red_swipe" OnClickAction="$KillContact($contact.Id, $objCust)">
								<c:VerticalLayout>
		             					<c:Image></c:Image>
		              					<c:TextView Text="#Fair#"></c:TextView>
		           				</c:VerticalLayout>
							</c:HorizontalLayout>
		
						</c:SwipeHorizontalLayout>
					</s:Else>
				
				<c:HorizontalLine />
			</s:Iterator>

			<c:HorizontalLayout CssClass="end_of_block" />
			
			
			
		</c:ScrollView>
	</c:DockLayout>



</c:Screen>