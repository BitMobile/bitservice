    </bp:Step>
    
     <bp:Step Name="ChoiceProduct" Screen="requests\choiceproduct.xml" Controller="requests\choiceproduct.js">
    	<bp:Action Name="DoSelect" NextStep="Work"></bp:Action>
    	
